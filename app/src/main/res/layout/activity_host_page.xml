<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/host_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    tools:context=".Host_page">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/heading_color">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="25.18dp"
                android:layout_height="24.35dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/logo"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/linearLayout"
            android:layout_alignBottom="@id/linearLayout"
            android:layout_toEndOf="@id/linearLayout"
            android:text="Quizaro"
            android:textColor="@color/text_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/linearLayout"
            android:layout_alignBottom="@id/linearLayout"
            android:layout_marginEnd="13dp"
            android:backgroundTint="@android:color/black"
            android:scaleType="centerInside"
            android:src="@drawable/profile_icon" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="25dp"
            android:paddingBottom="35dp"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/card_white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/settings_icon"/>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="Quiz Setup"
                            android:textColor="@color/text_dark"
                            style="@style/normal_bold"
                            android:layout_marginLeft="2dp"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="20dp"
                        android:text="Quiz Title"
                        style="@style/normal_size"
                        android:textColor="@color/text_dark"
                        />

                    <EditText
                        android:id="@+id/quizTitleInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:hint="Enter quiz title"
                        android:textColorHint="@color/text_gray"
                        style="@style/small"
                        android:textColor="@color/black"
                        android:background="@drawable/text_box_shape"
                        android:paddingLeft="12dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="20dp"
                        android:text="Topic"
                        style="@style/normal_size"
                        android:textColor="@color/text_dark"
                        />

                    <EditText
                        android:id="@+id/topicInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:hint="Enter topic"
                        android:textColorHint="@color/text_gray"
                        style="@style/small"
                        android:textColor="@color/black"
                        android:background="@drawable/text_box_shape"
                        android:paddingLeft="12dp"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="25dp"
                app:cardBackgroundColor="@color/card_white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/plus_icon"
                            />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:text="Add question"
                            android:textColor="@color/text_dark"
                            style="@style/normal_bold"
                            android:layout_marginLeft="2dp"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="20dp"
                        android:text="Question"
                        style="@style/normal_size"
                        android:textColor="@color/text_dark"
                        />

                    <EditText
                        android:id="@+id/questionInput"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"
                        android:hint="Enter your question"
                        android:textColorHint="@color/text_gray"
                        style="@style/small"
                        android:textColor="@color/black"
                        android:background="@drawable/text_box_shape"

                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        android:overScrollMode="always"
                        android:singleLine="false"
                        android:lines="5"
                        android:maxLines="10"
                        android:layout_gravity="top|start"

                        android:paddingLeft="12dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >

                                <TextView
                                    style="@style/normal_size"
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:text="Option 1"
                                    android:textColor="@color/text_dark" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="10dp">

                                    <EditText
                                        android:layout_width="90dp"
                                        android:layout_height="35dp"
                                        android:hint="Option 1"
                                        android:id="@+id/option1"
                                        android:textColorHint="@color/text_gray"
                                        style="@style/small"
                                        android:textColor="@color/black"
                                        android:background="@drawable/text_box_shape"
                                        android:paddingLeft="12dp"
                                        />

                                    <CheckBox
                                        android:id="@+id/checkBox1"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:checked="true" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="20dp"
                                >

                                <TextView
                                    style="@style/normal_size"
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:text="Option 3"
                                    android:textColor="@color/text_dark" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="10dp">

                                    <EditText
                                        android:layout_width="90dp"
                                        android:layout_height="35dp"
                                        android:hint="Option 3"
                                        android:id="@+id/option3"
                                        android:textColorHint="@color/text_gray"
                                        style="@style/small"
                                        android:textColor="@color/black"
                                        android:background="@drawable/text_box_shape"
                                        android:paddingLeft="12dp"
                                        />

                                    <CheckBox
                                        android:id="@+id/checkBox3"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!--                        to force the boxes to the opposite sides-->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="end">
                            <LinearLayout
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >

                                <TextView
                                    style="@style/normal_size"
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:text="Option 2"
                                    android:textColor="@color/text_dark" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="10dp">

                                    <EditText
                                        android:layout_width="90dp"
                                        android:layout_height="35dp"
                                        android:hint="Option 2"
                                        android:id="@+id/option2"
                                        android:textColorHint="@color/text_gray"
                                        style="@style/small"
                                        android:textColor="@color/black"
                                        android:background="@drawable/text_box_shape"
                                        android:paddingLeft="12dp"
                                        />

                                    <CheckBox
                                        android:id="@+id/checkBox2"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"/>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="20dp"
                                >

                                <TextView
                                    style="@style/normal_size"
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:text="Option 4"
                                    android:textColor="@color/text_dark" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="10dp">

                                    <EditText
                                        android:layout_width="90dp"
                                        android:layout_height="35dp"
                                        android:hint="Option 4"
                                        android:id="@+id/option4"
                                        android:textColorHint="@color/text_gray"
                                        style="@style/small"
                                        android:textColor="@color/black"
                                        android:background="@drawable/text_box_shape"
                                        android:paddingLeft="12dp"
                                        />

                                    <CheckBox
                                        android:id="@+id/checkBox4"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="20dp"
                        android:text="Time Limit (in seconds)"
                        style="@style/normal_size"
                        android:textColor="@color/text_dark"
                        />

                    <Spinner
                        android:id="@+id/timeLimitSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/text_box_shape"
                        android:paddingLeft="12dp"
                        android:spinnerMode="dropdown" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/addQuestionBtn"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:text="Add question"
                        android:textAllCaps="false"
                        android:textColor="@color/text_white"
                        style="@style/normal_bold"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/green_gradient"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/card_white"
                android:layout_marginTop="25dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/questionsCount"
                        android:layout_width="120dp"
                        android:layout_height="20dp"
                        android:text="Questions (0)"
                        android:textColor="@color/text_dark"
                        style="@style/normal_bold"
                        android:layout_marginLeft="2dp"
                        />

                    <LinearLayout
                        android:id="@+id/questionsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/emptyText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No questions added yet"
                            style="@style/normal_size"
                            android:textColor="@color/text_gray"
                            android:gravity="center"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/hostBtn"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/blue_gradient"
                android:text="Host"
                android:textAllCaps="false"
                android:textColor="@color/text_white"
                style="@style/normal_bold"
                android:layout_marginTop="25dp"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>