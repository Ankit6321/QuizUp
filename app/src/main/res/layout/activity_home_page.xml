<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    tools:context=".Home_page">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/heading_color">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="25.18dp"
                android:layout_height="24.35dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/logo"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/linearLayout"
            android:layout_alignBottom="@id/linearLayout"
            android:layout_toEndOf="@id/linearLayout"
            android:text="Quizaro"
            android:textColor="@color/text_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/linearLayout"
            android:layout_alignBottom="@id/linearLayout"
            android:layout_marginEnd="13dp"
            android:backgroundTint="@android:color/black"
            android:scaleType="centerInside"
            android:src="@drawable/profile_icon" />
    </RelativeLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Ready to quiz?"
            android:textColor="@color/text_dark"
            style="@style/bigger_heading"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="Challenge yourself and climb the leaderboards!"
            android:textColor="@color/text_dark"
            style="@style/normal_size" />

        <!-- Host & Join Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHost"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/red_button"
                android:text="Host"
                style="@style/sub_heading"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                android:elevation="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnJoin"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:background="@drawable/green_gradient"
                android:text="Join"
                style="@style/sub_heading"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:elevation="8dp"/>
        </LinearLayout>

        <!-- All Quizzes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Quizzes"
            style="@style/sub_heading"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginStart="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/card_white"
                    app:cardCornerRadius="15dp"
                    android:elevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/card1_quiz_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="General Knowledge"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_dark"/>

                            <TextView
                                android:id="@+id/card1_quiz_topic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Topic: Mixed Trivia"
                                android:textSize="14sp"
                                android:textColor="@color/text_gray"/>
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/card1_start_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Start Quiz"
                            android:textAllCaps="false"
                            android:textColor="@color/text_white"
                            android:background="@drawable/purple_gradient"
                            android:paddingHorizontal="16dp"
                            android:elevation="4dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/card_white"
                    app:cardCornerRadius="15dp"
                    android:elevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/card2_quiz_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="History Trivia"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_dark"/>

                            <TextView
                                android:id="@+id/card2_quiz_topic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Topic: World Events"
                                android:textSize="14sp"
                                android:textColor="@color/text_gray"/>
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/card2_start_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Start Quiz"
                            android:textAllCaps="false"
                            android:textColor="@color/text_white"
                            android:background="@drawable/purple_gradient"
                            android:paddingHorizontal="16dp"
                            android:elevation="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/card_white"
                    app:cardCornerRadius="15dp"
                    android:elevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/card3_quiz_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Science &amp; Tech"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_dark"/>

                            <TextView
                                android:id="@+id/card3_quiz_topic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Topic: Physics &amp; Space"
                                android:textSize="14sp"
                                android:textColor="@color/text_gray"/>
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/card3_start_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Start Quiz"
                            android:textAllCaps="false"
                            android:textColor="@color/text_white"
                            android:background="@drawable/purple_gradient"
                            android:paddingHorizontal="16dp"
                            android:elevation="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/card_white"
                    app:cardCornerRadius="15dp"
                    android:elevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/card4_quiz_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pop Culture"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_dark"/>

                            <TextView
                                android:id="@+id/card4_quiz_topic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Topic: Movies &amp; Music"
                                android:textSize="14sp"
                                android:textColor="@color/text_gray"/>
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/card4_start_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Start Quiz"
                            android:textAllCaps="false"
                            android:textColor="@color/text_white"
                            android:background="@drawable/purple_gradient"
                            android:paddingHorizontal="16dp"
                            android:elevation="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/card_white"
                    app:cardCornerRadius="15dp"
                    android:elevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/card5_quiz_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Geography"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_dark"/>

                            <TextView
                                android:id="@+id/card5_quiz_topic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Topic: Capitals &amp; Flags"
                                android:textSize="14sp"
                                android:textColor="@color/text_gray"/>
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/card5_start_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Start Quiz"
                            android:textAllCaps="false"
                            android:textColor="@color/text_white"
                            android:background="@drawable/purple_gradient"
                            android:paddingHorizontal="16dp"
                            android:elevation="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:weightSum="3">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/nav_overlay">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/house_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                style="@style/small"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Ranking -->
        <LinearLayout
            android:id="@+id/navRanking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/trophy_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranking"
                style="@style/small"
                android:textColor="@color/text_dark" />
        </LinearLayout>

        <!-- Stats (Selected) -->
        <LinearLayout
            android:id="@+id/navStats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/progress_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stats"
                style="@style/small"
                android:textColor="@color/text_dark" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
