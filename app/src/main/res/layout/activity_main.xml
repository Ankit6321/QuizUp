<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        android:layout_margin="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/background_light">

        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="517dp"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@drawable/icon_shape"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="QuizUp"
                android:textColor="@color/purple_700"
                style="@style/bigger_heading"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Welcome back! Ready to quiz?"
                android:textColor="@color/text_dark"
                style="@style/normal_size"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="287dp"
                android:layout_height="58dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/text_box_shape"
                android:hint="Username"
                android:textColorHint="@color/text_gray"
                android:textColor="@color/text_dark"
                style="@style/normal_size"
                android:inputType="textPersonName"
                android:padding="14dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="287dp"
                android:layout_height="58dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/text_box_shape"
                android:hint="Password"
                android:textColorHint="@color/text_gray"
                android:textColor="@color/text_dark"
                style="@style/normal_size"
                android:inputType="textPassword"
                android:padding="14dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnlogin"
                android:layout_width="168dp"
                android:layout_height="58dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/button_shape_purple"
                android:text="Start Quizzing!"
                android:textAllCaps="false"
                android:textColor="@color/text_white"
                style="@style/normal_bold"
                />

            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donâ€™t have an account? Register"
                android:textSize="15dp"
                style="@style/normal_size"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/forgotpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textSize="15dp"
                android:textColor="@color/text_dark"
                style="@style/normal_size"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>