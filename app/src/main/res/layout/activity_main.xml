<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background_light"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/icon_shape" />

            <TextView
                style="@style/bigger_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="QuizUp"
                android:textColor="@color/purple_700"
                android:textStyle="bold" />

            <TextView
                style="@style/normal_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Welcome back! Ready to quiz?"
                android:textColor="@color/text_dark"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/username"
                style="@style/normal_size"
                android:layout_width="287dp"
                android:layout_height="58dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/text_box_shape"
                android:hint="Username"
                android:inputType="textPersonName"
                android:padding="14dp"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_gray" />

            <EditText
                android:id="@+id/password"
                style="@style/normal_size"
                android:layout_width="287dp"
                android:layout_height="58dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/text_box_shape"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="14dp"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_gray" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnlogin"
                style="@style/normal_bold"
                android:layout_width="168dp"
                android:layout_height="58dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/purple_gradient"
                android:text="Start Quizzing!"
                android:textAllCaps="false"
                android:textColor="@color/text_white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/register"
                    style="@style/normal_size"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="Create Account"
                    android:textColor="@color/text_dark"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/forgotpassword"
                    android:layout_marginLeft="40dp"
                    style="@style/normal_size"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="Forgot Password"
                    android:textColor="@color/text_dark"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>