<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/quiz_page"
    tools:context=".quiz_page"
    android:paddingTop="25dp"
    android:paddingBottom="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/tv_quiz_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Math Quiz"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_quiz_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 of 10"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="25dp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/ic_timer"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/clock_icon"
                android:contentDescription="Timer"/>

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 s"
                style="@style/normal_size"
                android:textColor="@android:color/black"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar_timer"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:progress="100"
            android:max="100"
            android:progressDrawable="@drawable/custom_progress"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the capital of France?"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="25dp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:id="@+id/options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="25dp">

        <LinearLayout
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:background="@drawable/option_shape"
            android:layout_marginVertical="8dp">

            <CheckBox
                android:id="@+id/cb_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <TextView
                android:id="@+id/tv_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paris"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:background="@drawable/option_shape"
            android:layout_marginVertical="8dp">

            <CheckBox
                android:id="@+id/cb_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <TextView
                android:id="@+id/tv_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="London"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:background="@drawable/option_shape"
            android:layout_marginVertical="8dp">

            <CheckBox
                android:id="@+id/cb_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <TextView
                android:id="@+id/tv_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berlin"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:background="@drawable/option_shape"
            android:layout_marginVertical="8dp">

            <CheckBox
                android:id="@+id/cb_option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <TextView
                android:id="@+id/tv_option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Madrid"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="40dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/green_gradient"
        android:layout_marginTop="24dp"
        android:paddingVertical="12dp"
        android:elevation="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="25dp"/>
</LinearLayout>